<Window x:Class="HackathonX.UI.UserInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HackathonX.UI"
        mc:Ignorable="d"
        Title="Please enter your name" Height="235" Width="509">
    <Grid x:Name="___No_Name_" Margin="0,0,0,-1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="32" Margin="170,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" AutomationProperties.Name="txtName" FontSize="20" Grid.Column="1"/>
        <Label x:Name="label" Content="Name?" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="32" Margin="114,44,0,0" VerticalAlignment="Top" Width="62"/>
        <Button x:Name="btnStart" Content="Start playing" HorizontalAlignment="Center" Height="23" VerticalAlignment="Center" Width="90" Grid.Column="1" Click="StartPlaying_Click "/>

    </Grid>
</Window>
